@model IEnumerable<CarsLocation.Models.CategoriesModel>


@{
    ViewData["Title"] = "GetCategories";
     Layout="_LayoutAdmin";
}
<div class="row" style="margin-bottom:30px; margin-left:17px;">
<p>
    <a class="btn btn-primary" asp-controller="Categories" asp-action="AddCategory">Create New</a>
</p>
</div>
<div class="form-center">
<div class="container">
    <div class="panel">
        <table id="categoriestable" class="table table-dark" style="width:100%">
            <thead>
                <tr>
                    <th>
                        No#
                    </th>
                    <th>
                        Category Name
                    </th>
                    <th>
                        Category Images
                    </th>
                    <th>
                        Edit
                    </th>
                   
                    <th>Delete</th>
                </tr>
            </thead>
            <tbody id="tbody"></tbody>
        </table>

    </div>
</div>


<div class="modal fade" tabindex="-1" role="dialog" data-backdrop="static" data-keyboard="false" id="form-modal">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title"></h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-md-4">
                        <form id="update-form">
                            <div class="form-group">
                                 <input id="CategoryId" hidden="hidden" class="form-control" />
                                 <input id="ImageName" hidden="hidden" class="form-control" />
                                <label class="control-label">Calegory Name</label>
                                <input id="CategoryName" class="form-control" />

                            </div>
                            <div class="form-group">
                                <input type="file" id="fileUpload" class="btn btn-primary fileUpload" style="width:100%">
                            </div>
                            <div class="form-group">
                                <input type="button" onclick="updateCategory()" value="Save" class="btn btn-primary" />
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
</div>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/assets/Category.js"></script>
<script type="text/javascript">

        $(document).ready(function () {
        getCatogrieslist();

    });
</script>

@section Scripts {
    @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
}
